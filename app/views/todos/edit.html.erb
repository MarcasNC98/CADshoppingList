<body class="bg-dark">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">

        <h1 class="text-center text-light">Editing Item</h1>

          <div class="card mb-3 bg-secondary text-light">
            <div class="card-body">
              <%= render "form", todo: @todo %>
            </div>
            <div class="card-footer text-center">
              <%= link_to "Show this item", @todo, class: "btn btn-primary" %> |
              <%= link_to "Back to items", todos_path, class: "btn btn-primary" %>
            </div>
          </div>
      </div>
    </div>
  </div>
</body>