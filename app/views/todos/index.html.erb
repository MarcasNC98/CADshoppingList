<!--Bootstrap to change the style of the page-->
<body class="bg-dark">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">

        <!--Centers text and makes it white to contrast with dark background-->
        <h1 class="text-center text-light">Items</h1>

        <div id="todos">
          <% @todos.each do |todo| %>
            <div class="card mb-3 bg-secondary text-light">
              <!--Places each todo in a card-->
              <div class="card-body">
                <%= render todo %>
              </div>
              <!--Places the submit button in a card footer-->
              <div class="card-footer text-center">
                <%= link_to "Show this item", todo, class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="text-center">
          <%= link_to "New item", new_todo_path, class: "btn btn-info" %>
        </div>
      </div>
    </div>
  </div>
</body>



