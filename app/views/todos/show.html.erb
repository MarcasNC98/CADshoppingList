<body class="bg-dark">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <p class="alert alert-success bg-dark text-light"><%= notice %></p>
      
        <!--Bootstrap to change the style of the todo on the page-->
        <div class="card mb-3 bg-secondary text-light">
          <div class="card-body">
            <%= render @todo %>
            <%= image_tag @todo.image, class: "img-fluid" if @todo.image.attached? %>
          </div>
          <div class="card-footer text-center">
            <%= link_to "Edit this item", edit_todo_path(@todo), class: "btn btn-success" %> |
            <%= link_to "Back to items", todos_path, class: "btn btn-primary" %>
            <%= button_to "Delete this item", @todo, method: :delete, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

