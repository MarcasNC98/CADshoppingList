<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :item, style: "display: block" %>
    <%= form.text_field :item %>
  </div>

  <div>
    <%= form.label :purchased, style: "display: block" %>
    <%= form.check_box :purchased %>
  </div>

  <!--Allows for an image to be uploaded-->
  <div class="field">
    <%= form.label :image %>
    <br>
    <%= form.file_field :image %>
  </div>

  <div>
    <br>
    <%= form.submit "Create item", class: "btn btn-success"%>
  </div>
<% end %>
